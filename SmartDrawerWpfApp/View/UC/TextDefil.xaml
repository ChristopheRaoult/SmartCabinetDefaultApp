<UserControl x:Class="SmartDrawerWpfApp.View.UC.TextDefil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartDrawerWpfApp.View.UC"
             mc:Ignorable="d" 
             x:Name="uc"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer  x:Name="Marquee" 
                      VerticalAlignment="Center"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Hidden"
                     >
            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Text="{Binding Path=myText,ElementName=uc}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
